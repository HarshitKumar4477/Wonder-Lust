<div class="trip-card">
      <div class="trip-img-wrapper">
        <img
          src=""<%= place.image %>"
          alt="<%= place.name %>"
          class="trip-img"
        />

        <!-- Top-right like icon (always visible) -->
        <div class="trip-card-like">
          <span class="material-symbols-outlined">favorite</span>
        </div>

        <!-- Bottom-right icons (show on hover) -->
        <div class="trip-card-actions">
          <span class="material-symbols-outlined">add</span>
          <span class="material-symbols-outlined">download</span>
        </div>

        <!-- Card Text Info (hidden before hover) -->
        <div class="trip-details">
          <h3 class="trip-title"><%= place.name %></h3>
          <p class="trip-location"><%= place.location %></p>
          <p class="trip-price">
            ₹<%= place.price %> / night</span>
          </p>
          <a href="/place/<%= place._id %>" class="text-sm text-blue-500 hover:underline">View →</a>
        </div>
      </div>
    </div>
<!-- Optional: Add a hover effect or animation -->
